# Aliases
alias vi="mvim -v"
alias vim="vi"

# Bash aliases
alias back="cd -"
alias ll="ls -lahG"
bind '"\e[A"':history-search-backward
bind '"\e[B"':history-search-forward

# Git aliaes
alias gc="git checkout"
alias gb="git branch"
alias gs="git status"
alias gm="git merge"

alias railsdoc="open ~/code/personal/gems/railsdocs/doc/rdoc/index.html"

alias annotate='annotate -p before -e tests'
